<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_videolist_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/d_03"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:ellipsize="middle"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_videolist_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_videolist_icon"
        android:textColor="#FFAF60"
        android:textSize="18sp"
        android:text="視頻名稱"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_videolist_size"
        android:layout_marginLeft="5dp"
        android:textColor="#FFAF60"
        android:textSize="14sp"
        android:text="視頻大小"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
    android:layout_marginTop="10dp"
    android:background="#B7FF4A"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="0.5dp" />

    <View
        android:layout_marginTop="10dp"
        android:background="#B7FF4A"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</RelativeLayout>

